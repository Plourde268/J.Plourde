@model CraigsList.Models.AdsVm
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Everything Craigs List has to Offer</h1>
    <table class="table-striped table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Created By</th>
            <th>Created On</th>
            <th>City</th>
            <th>State</th>
            <th>Availibility</th>
            <th>Price</th>
        </tr>
    </thead>
        <tbody>
            @foreach (var c in Model.AllAds)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Title</td>
                    <td>@c.CreatedBy</td>
                    <td>@c.CreatedOn</td>
                    <td>@c.City</td>
                    <td>@c.State</td>
                    <td>@c.IsAvailible</td>
                    <td>$@c.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>

